{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://example.com/employee.schema.json",
  "title": "Record of employee",
  "description": "This document records the details of an employee",
  "type": "object",
  "properties": {
    "Users": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "login": {
              "type": "string",
              "description": "User's login"
            },
            "password": {
              "type": "string",
              "description": "User's password"
            },
            "email": {
              "type": "string",
              "description": "User's email address"
            }
          },
          "required": [
            "login",
            "password",
            "email"
          ]
        }
      }
    },
    "Requests": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "purpose": {
              "type": "string",
              "description": "Purpose of the request"
            },
            "date": {
              "type": "string",
              "description": "Date of the request"
            }
          },
          "required": [
            "purpose",
            "date"
          ]
        }
      }
    },
    "Office Employee": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the office employee"
            }
          },
          "required": [
            "name"
          ]
        }
      }
    },
    "Answer": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "Answer text": {
              "type": "string",
              "description": "Text of the answer"
            },
            "date": {
              "type": "string",
              "description": "Date of the answer"
            }
          },
          "required": [
            "Answer text",
            "date"
          ]
        }
      }
    },
    "List of Products": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the product"
            }
          },
          "required": [
            "name"
          ]
        }
      }
    },
    "Request for an order": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "purpose": {
              "type": "string",
              "description": "Purpose of the order request"
            },
            "date": {
              "type": "string",
              "description": "Date of the order request"
            }
          },
          "required": [
            "purpose",
            "date"
          ]
        }
      }
    },
    "Order": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the order"
            }
          },
          "required": [
            "name"
          ]
        }
      }
    },
    "Masseiter Sculptor": {
      "type": "object",
      "properties": {
        "1": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the masseiter sculptor"
            }
          },
          "required": [
            "name"
          ]
        }
      }
    }
  }
}